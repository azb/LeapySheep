// Copy-Paste of swipe code


if mouse_y &gt;= 0 and mouse_y &lt;= room_height {
    if mouse_x &gt;= 0 and mouse_x &lt;= room_width {
        if mouse_check_button_released(mb_left) {
            if is_swiping {
                if mouse_x &gt; touch_point_x + 64 {
                    //swipe_direction = 1
                    //sheep_selected = sheep_selected + swipe_direction
                    if global.skin_selected &gt; 0 {
                        global.skin_selected--
                    }
                }
                else if mouse_x &lt; touch_point_x - 64 {
                    //swipe_direction = -1
                    //sheep_selected = sheep_selected + swipe_direction
                    if global.skin_selected &lt; global.skins - 1 {
                        global.skin_selected++
                    }
                }
            }
            is_touching = 0
            is_swiping = 0
            touch_point_x = -1
            touch_point_y = -1
            swipe_trigger_time = STT_MAX
        }
        else if mouse_check_button(mb_left) {
            if !is_touching {
                touch_point_x = mouse_x
                touch_point_y = mouse_y
                is_touching = 1
            }
            if swipe_trigger_time &lt;= 0 {
                is_swiping = 1
            }
            else if !is_swiping {
                swipe_trigger_time--
            }
        }
    }
}



