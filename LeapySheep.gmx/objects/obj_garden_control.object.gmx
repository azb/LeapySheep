            <string>//Code for "Swiping" input
if mouse_y &gt;= swipe_window_y1 and mouse_y &lt;= swipe_window_y2 {
    if mouse_x &gt;= swipe_window_x1 and mouse_x &lt;= swipe_window_x2 {
        if mouse_check_button_released(mb_left) {
            if is_swiping {
                if mouse_x &gt; touch_point_x + 64 {
                    swipe_direction = 1
                    sheep_selected = sheep_selected + swipe_direction
                    if sheep_selected &gt; SHEEP_MAX {
                        sheep_selected = SHEEP_MIN
                    }
                    
                }
                else if mouse_x &lt; touch_point_x - 64 {
                    swipe_direction = -1
                    sheep_selected = sheep_selected + swipe_direction
                    if sheep_selected &lt; SHEEP_MIN {
                        sheep_selected = SHEEP_MAX
                    }
                    
                }
            }
            is_touching = 0
            is_swiping = 0
            touch_point_x = -1
            touch_point_y = -1
            swipe_trigger_time = STT_MAX
        }
        else if mouse_check_button(mb_left) {
            if !is_touching {
                touch_point_x = mouse_x
                touch_point_y = mouse_y
                is_touching = 1
            }
            if swipe_trigger_time &lt;= 0 {
                is_swiping = 1
            }
            else if !is_swiping {
                swipe_trigger_time--
            }
        }
    }
}

